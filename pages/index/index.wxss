.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0 36rpx 60rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 50rpx;
}
.emoji { font-size: 80rpx; }
.title { font-size: 44rpx; font-weight: 700; color: #E8457C; margin-top: 12rpx; }
.subtitle { font-size: 26rpx; color: #999; margin-top: 8rpx; }

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.label {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 28rpx;
}
.input {
  border: 2rpx solid #ddd;
  height: 96rpx;
  text-align: center;
  font-size: 44rpx;
  font-weight: 700;
  letter-spacing: 20rpx;
  border-radius: 12rpx;
  background: #fafafa;
  margin-bottom: 32rpx;
}

.btn-main {
  background: linear-gradient(135deg, #E8457C, #F06292);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
}
.btn-main[disabled] { background: #ccc; color: #999; }
.btn-main::after { border: none; }

.tips {
  padding: 30rpx 12rpx;
  font-size: 24rpx;
  color: #bbb;
  line-height: 1.8;
}

.btn-dev {
  margin-top: 30rpx;
  background: #fff;
  color: #999;
  border: 1rpx solid #ddd;
  font-size: 26rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
}
.btn-dev::after { border: none; }

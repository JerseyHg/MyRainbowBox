.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0 30rpx 60rpx;
}

/* ===== 加载 ===== */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}
.loading-emoji { font-size: 80rpx; }
.loading-text { font-size: 28rpx; color: #999; margin-top: 20rpx; }

/* ===== 统计卡片 ===== */
.stats-card {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #E8457C, #F06292);
  border-radius: 24rpx;
  padding: 40rpx 20rpx;
  margin-top: 30rpx;
  margin-bottom: 24rpx;
}
.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.stat-num {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
}
.stat-num.used { opacity: 0.7; }
.stat-num.remaining { color: #FFD54F; }
.stat-label {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  margin-top: 6rpx;
}
.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255,255,255,0.3);
}

/* ===== 卡片 ===== */
.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03);
}
.card-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* ===== 邀请码项 ===== */
.code-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  background: #FAFAFA;
  border-radius: 14rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s;
}
.code-item:last-child { margin-bottom: 0; }
.code-item.used {
  opacity: 0.5;
}
.code-item.copied {
  background: rgba(232,69,124,0.08);
  border: 2rpx solid rgba(232,69,124,0.2);
}

.code-left { display: flex; flex-direction: column; }
.code-text {
  font-size: 36rpx;
  font-weight: 700;
  font-family: 'Courier New', Courier, monospace;
  letter-spacing: 8rpx;
  color: #333;
}
.code-status {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
}
.code-status.available { color: #388E3C; }

.code-right { display: flex; align-items: center; }
.btn-copy {
  background: #E8457C;
  color: #fff;
  border: none;
  border-radius: 32rpx;
  font-size: 24rpx;
  padding: 0 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  min-width: 120rpx;
}
.btn-copy::after { border: none; }
.btn-copy.disabled {
  background: #ddd;
  color: #999;
}

/* ===== 空状态 ===== */
.empty-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 40rpx;
}
.empty-emoji { font-size: 80rpx; }
.empty-text { font-size: 32rpx; color: #666; margin-top: 20rpx; font-weight: 500; }
.empty-desc { font-size: 26rpx; color: #bbb; margin-top: 10rpx; }

/* ===== 提示 ===== */
.tips-card {
  padding: 28rpx 32rpx;
  background: rgba(232,69,124,0.04);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.tips-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #E8457C;
  margin-bottom: 12rpx;
}
.tips-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
}

/* ===== 分享按钮 ===== */
.share-wrap {
  padding: 20rpx 0 40rpx;
}
.btn-share {
  background: linear-gradient(135deg, #E8457C, #F06292);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
}
.btn-share::after { border: none; }

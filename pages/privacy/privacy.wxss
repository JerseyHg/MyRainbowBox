.page {
  min-height: 100vh;
  background: #f5f5f5;
}

.content {
  padding: 30rpx 36rpx 60rpx;
}

.main-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}

.update-info {
  display: block;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-bottom: 30rpx;
}

.intro {
  display: block;
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
  margin-bottom: 30rpx;
  padding: 20rpx 24rpx;
  background: #fff;
  border-radius: 12rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin: 30rpx 0 16rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #4A90D9;
}

.para {
  display: block;
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
  margin-bottom: 12rpx;
}

.para.bold {
  font-weight: 600;
  color: #333;
}

.item {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  padding-left: 16rpx;
  margin-bottom: 6rpx;
}

.footer {
  text-align: center;
  padding: 40rpx 0 20rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #ccc;
}

/* ===== 底部同意/不同意按钮栏 ===== */
.agree-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.btn-disagree {
  flex: 1;
  background: #fff;
  color: #999;
  border: 2rpx solid #ddd;
  border-radius: 48rpx;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 84rpx;
}
.btn-disagree::after {
  border: none;
}

.btn-agree {
  flex: 2;
  background: linear-gradient(135deg, #4A90D9, #357ABD);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
}
.btn-agree::after {
  border: none;
}

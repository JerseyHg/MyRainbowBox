.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0 30rpx 60rpx;
}

/* ===== 加载 ===== */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}
.loading-emoji { font-size: 80rpx; animation: pulse 1.5s infinite; }
.loading-text { font-size: 28rpx; color: #999; margin-top: 20rpx; }
@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

/* ===== 空状态 ===== */
.empty-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  border-radius: 24rpx;
  padding: 80rpx 40rpx;
  margin-top: 60rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.empty-emoji { font-size: 100rpx; }
.empty-title { font-size: 36rpx; font-weight: 600; color: #333; margin-top: 24rpx; }
.empty-desc { font-size: 28rpx; color: #999; margin-top: 12rpx; margin-bottom: 40rpx; }

/* ===== 状态卡片 ===== */
.status-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 24rpx;
  padding: 60rpx 40rpx 48rpx;
  margin-top: 30rpx;
  margin-bottom: 24rpx;
}
.status-emoji { font-size: 80rpx; }
.status-label {
  font-size: 40rpx;
  font-weight: 700;
  margin-top: 16rpx;
}
.status-desc {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}
.serial-badge {
  margin-top: 24rpx;
  padding: 10rpx 36rpx;
  background: rgba(255,255,255,0.8);
  border-radius: 32rpx;
}
.serial-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #E8457C;
}

/* ===== 通用卡片 ===== */
.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03);
}
.card-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* ===== 拒绝卡片 ===== */
.reject-card {
  border: 2rpx solid rgba(211,47,47,0.15);
  background: #FFFBFB;
}
.reject-reason {
  display: block;
  font-size: 28rpx;
  color: #D32F2F;
  line-height: 1.7;
  padding: 16rpx 20rpx;
  background: rgba(211,47,47,0.05);
  border-radius: 12rpx;
}

/* ===== 信息行 ===== */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.info-row:last-child { border-bottom: none; }
.info-label { font-size: 28rpx; color: #999; }
.info-value { font-size: 28rpx; color: #333; font-weight: 500; }

/* ===== 操作卡片（邀请码入口） ===== */
.action-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
}
.action-left { display: flex; align-items: center; gap: 20rpx; }
.action-emoji { font-size: 48rpx; }
.action-info { display: flex; flex-direction: column; }
.action-title { font-size: 30rpx; font-weight: 600; color: #333; }
.action-desc { font-size: 24rpx; color: #999; margin-top: 4rpx; }
.action-arrow { font-size: 36rpx; color: #ccc; }

/* ===== 提示 ===== */
.tips-card {
  padding: 28rpx 32rpx;
  background: rgba(232,69,124,0.04);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.tips-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #E8457C;
  margin-bottom: 12rpx;
}
.tips-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
}

/* ===== 退出登录 ===== */
.logout-wrap {
  padding: 40rpx 0;
}
.btn-logout {
  background: #fff;
  color: #999;
  border: 1rpx solid #ddd;
  border-radius: 48rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
.btn-logout::after { border: none; }

/* ===== 按钮 ===== */
.btn-primary {
  background: linear-gradient(135deg, #E8457C, #F06292);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  width: 100%;
}
.btn-primary::after { border: none; }

.page { min-height: 100vh; background: #f5f5f5; padding: 0 36rpx 60rpx; }

/* ===== 加载 ===== */
.loading-wrap { display: flex; flex-direction: column; align-items: center; padding-top: 200rpx; }
.loading-emoji { font-size: 80rpx; }
.loading-text { font-size: 28rpx; color: #999; margin-top: 16rpx; }

/* ===== 空状态 ===== */
.empty-card { background: #fff; border-radius: 20rpx; padding: 60rpx 40rpx; text-align: center; margin-top: 40rpx; }
.empty-emoji { font-size: 80rpx; display: block; }
.empty-title { display: block; font-size: 32rpx; font-weight: 600; color: #333; margin-top: 20rpx; }
.empty-desc { display: block; font-size: 26rpx; color: #999; margin-top: 10rpx; margin-bottom: 30rpx; }

/* ===== 状态卡片 ===== */
.status-card { border-radius: 20rpx; padding: 40rpx; text-align: center; margin-bottom: 20rpx; }
.status-emoji { font-size: 60rpx; display: block; }
.status-label { display: block; font-size: 36rpx; font-weight: 700; margin-top: 12rpx; }
.status-desc { display: block; font-size: 26rpx; color: #666; margin-top: 8rpx; }
.serial-badge { display: inline-block; background: rgba(255,255,255,0.6); border-radius: 20rpx; padding: 8rpx 24rpx; margin-top: 16rpx; }
.serial-text { font-size: 26rpx; color: #333; font-weight: 500; }

/* ===== 卡片 ===== */
.card { background: #fff; border-radius: 16rpx; padding: 28rpx 32rpx; margin-bottom: 20rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03); }
.card-title { display: block; font-size: 28rpx; font-weight: 600; color: #333; margin-bottom: 16rpx; }
.info-row { display: flex; justify-content: space-between; padding: 12rpx 0; border-bottom: 1rpx solid #f5f5f5; }
.info-label { font-size: 26rpx; color: #999; }
.info-value { font-size: 26rpx; color: #333; }
.reject-reason { display: block; font-size: 26rpx; color: #D32F2F; line-height: 1.6; }

/* ===== 操作卡片 ===== */
.action-card { display: flex; align-items: center; justify-content: space-between; padding: 28rpx 32rpx; }
.action-left { display: flex; align-items: center; gap: 20rpx; }
.action-emoji { font-size: 48rpx; }
.action-info { display: flex; flex-direction: column; }
.action-title { font-size: 30rpx; font-weight: 600; color: #333; }
.action-desc { font-size: 24rpx; color: #999; margin-top: 4rpx; }
.action-arrow { font-size: 36rpx; color: #ccc; }

/* ===== 提示 ===== */
.tips-card { padding: 28rpx 32rpx; background: rgba(74,144,217,0.04); border-radius: 16rpx; margin-bottom: 20rpx; }
.tips-title { display: block; font-size: 26rpx; font-weight: 600; color: #4A90D9; margin-bottom: 12rpx; }
.tips-text { display: block; font-size: 24rpx; color: #999; line-height: 1.8; }

/* ===== 退出登录 ===== */
.logout-wrap { padding: 40rpx 0; }
.btn-logout { background: #fff; color: #999; border: 1rpx solid #ddd; border-radius: 48rpx; height: 80rpx; line-height: 80rpx; font-size: 28rpx; }
.btn-logout::after { border: none; }

/* ===== 按钮 ===== */
.btn-primary { background: linear-gradient(135deg, #4A90D9, #5BA0E9); color: #fff; border: none; border-radius: 48rpx; height: 88rpx; line-height: 88rpx; font-size: 32rpx; font-weight: 500; width: 100%; }
.btn-primary::after { border: none; }

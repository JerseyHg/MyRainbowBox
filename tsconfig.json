{
  "compilerOptions": {
    "strict": true,
    "target": "ES2017",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["ES2017"],
    "outDir": "./miniprogram",
    "rootDir": "./miniprogram",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["./typings"],
    "paths": {
      "@/*": ["./miniprogram/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "miniprogram/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
